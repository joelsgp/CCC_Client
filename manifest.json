{
    "manifest_version": 2,
    "name": "Cookie Clicker Cloud",
    "description": "Sync your CookieClicker Game around the browsers!",
    "version": "2.1.0",
    "icons": {
        "16": "imgs/Logo16.png",
        "48": "imgs/Logo48.png",
        "128": "imgs/Logo128.png"
    },
    "browser_action": {
        "default_icon": "imgs/Logo48.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/vendor.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://orteil.dashnet.org/cookieclicker/",
                "http://orteil.dashnet.org/cookieclicker/beta/"
            ],
            "js": [
                "js/vendor.js",
                "js/content_script_cc.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "https://cc.timia2109.com/*",
        "http://orteil.dashnet.org/cookieclicker/*"
    ],
    "web_accessible_resources": [
        "js/vendor.js",
        "js/inject_cc.js",
        "js/style.js",
        "js/docs.js",
        "docs/*"
    ],
    "short_name": "CCC"
}